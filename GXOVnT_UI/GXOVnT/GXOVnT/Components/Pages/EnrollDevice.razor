@page "/EnrollDevice"
@using GXOVnT.Models
@using GXOVnT.Services.ViewModels

<PageTitle>Enroll Device</PageTitle>

<MudGrid>
    <WizardComponent WizardTitle="Device Enrollment Wizard"
                     WizardCancelled="OnEnrollWizardCancelled"
                     WizardCompleted="OnEnrollWizardCompleted"
                     TWizardModelType="EnrollDeviceWizardModel"
                     WizardComponentModel="_enrollDeviceWizardModel">
        
        <WizardStep TWizardModelType="EnrollDeviceWizardModel" WizardStepTitle="Information" 
                    StepSequence="0" HasBackButton="false" WizardStepName="step_information">
            <DeviceEnrollmentStart></DeviceEnrollmentStart>
        </WizardStep>

        <WizardStep TWizardModelType="EnrollDeviceWizardModel" WizardStepTitle="Checking Permissions" 
                    StepSequence="1" WizardStepName="step_permissions">
            <CheckBTPermissions></CheckBTPermissions>
        </WizardStep>

        <WizardStep TWizardModelType="EnrollDeviceWizardModel" WizardStepTitle="Find device" 
                    StepSequence="2" WizardStepName="step_find_device">
            <DeviceScanner></DeviceScanner>
        </WizardStep>
    </WizardComponent>
  
    
    
</MudGrid>






