@page "/EnrollDevice"

<PageTitle>Enroll Device</PageTitle>

<MudGrid>
    <MudItem xs="12">
        <MudText Typo="Typo.h3" GutterBottom="true">Device Enrollment</MudText>
    </MudItem>
 

    
    @if (_selectedDeviceToEnroll == null)
    {
        <MudItem xs="12" sm="12">
            <DeviceScanner 
                DeviceSelected="EnrollDeviceSelected"></DeviceScanner> 
        </MudItem>
    }
    else
    {
        <DeviceConfigurator 
            DeviceConfigurationCancelled="OnDeviceConfigurationCancelled"></DeviceConfigurator>
    }
    
    
</MudGrid>






