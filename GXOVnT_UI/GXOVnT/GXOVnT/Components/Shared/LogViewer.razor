<MudPaper Width="100%">
    <MudButton @onclick="LogViewModel.ClearLogMessages">Clear Logs</MudButton>
    <MudTable Items="@LogViewModel.LogMessages" Hover="true" Breakpoint="Breakpoint.Sm" LoadingProgressColor="Color.Info">
        <HeaderContent>
            <MudTh>Time</MudTh>
            <MudTh>Type</MudTh>
            <MudTh>Message</MudTh>
        </HeaderContent>
        <RowTemplate>
            <MudTd DataLabel="Time">@context.TimeStamp</MudTd>
            <MudTd DataLabel="Type">@context.LogMessageType</MudTd>
            <MudTd DataLabel="Message">@context.Message</MudTd>
        </RowTemplate>
    </MudTable>

</MudPaper>