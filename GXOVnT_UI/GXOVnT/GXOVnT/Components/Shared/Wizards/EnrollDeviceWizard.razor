@using GXOVnT.Shared.Common

<MudGrid>
    <WizardComponent WizardTitle="Device Enrollment Wizard"
                     WizardCancelled="OnEnrollWizardCancelled"
                     WizardCompleted="OnEnrollWizardCompleted"
                     WizardSchema="EnrollDeviceWizardSchema">
        
        <WizardStep StepTitle="Information" StepName="@WizardSchemaStepType.EnrollDeviceStartupInformation.Name">
            <DeviceEnrollmentStart></DeviceEnrollmentStart>
        </WizardStep>

        <WizardStep StepTitle="Checking Permissions" StepName="@WizardSchemaStepType.CheckBluetoothPermissions.Name">
            <CheckBTPermissions InitialViewModel="@EnrollDeviceWizardSchema.CheckBluetoothPermissionsViewModel"></CheckBTPermissions>
        </WizardStep>

        <WizardStep StepTitle="Find device" StepName="@WizardSchemaStepType.ScanBluetoothSystems.Name">
            <DeviceScanner InitialViewModel="@EnrollDeviceWizardSchema.DeviceScannerViewModel" DeviceSelected="OnDeviceSelected"></DeviceScanner>
        </WizardStep>

        <WizardStep StepTitle="Device Information" StepName="@WizardSchemaStepType.ConfirmDeviceInformation.Name">
            <DeviceInfo InitialViewModel="@EnrollDeviceWizardSchema.DeviceInfoViewModel"></DeviceInfo>
        </WizardStep>

        <WizardStep StepTitle="Device Settings" StepName="@WizardSchemaStepType.SetDeviceConfiguration.Name">
            <DeviceEnrollSettings Device="@_selectedDeviceToEnroll"></DeviceEnrollSettings>
        </WizardStep>
    </WizardComponent>

    <MudItem xs="12">
        <MudExpansionPanels>
            <MudExpansionPanel Text="Logs">
                <LogViewer></LogViewer>
            </MudExpansionPanel>
        </MudExpansionPanels>
    </MudItem>
    
</MudGrid>






